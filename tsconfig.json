{
    "compilerOptions": {
      "jsx": "react",
      "module": "esnext",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "outDir": "./dist/",
      "preserveConstEnums": true,
      "removeComments": true,
      "strict": true,
      "alwaysStrict": true,
      "target": "ES5",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "lib": [
        "dom",
        "es5",
        "es6",
        "es2015.core",
        "es2015.promise",
        "webworker"
      ]
    },
    "exclude": [
      "node_modules"
    ]
  }
